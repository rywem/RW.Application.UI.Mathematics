<Window x:Class="RW.Application.UI.Mathematics.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:RW.Application.UI.Mathematics.GUI"
            xmlns:conv="clr-namespace:RW.Application.UI.Mathematics.Converters"
         xmlns:wpf="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        
        mc:Ignorable="d"

        Title="MainWindow" Height="450" Width="900">
   
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Input -->
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBlock VerticalAlignment="Center" Margin="0,0,8,0" Text="Expression:"/>
                <TextBox x:Name="InputBox" Width="520" Height="28" VerticalContentAlignment="Center"
                     Text="4x^2-2x^3-2" KeyDown="InputBox_KeyDown"/>
                <Button x:Name="ParseButton" Content="Parse and Factor"
                    Margin="8,0,0,0" Width="130" Height="28" Click="ParseButton_Click"/>
            </StackPanel>

            <TextBlock Grid.Row="2" x:Name="StatusBlock" Foreground="Crimson" />

            <!-- Results -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Factors -->
                <GroupBox Header="Factors (flattened)" Grid.Column="0">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Margin="6"
                               Text="Each multiplicative factor is shown as an integer-coefficient polynomial."/>
                        <ListBox x:Name="FactorsList" Margin="6"/>
                    </DockPanel>
                </GroupBox>

                <!-- Expanded -->
                <GroupBox Header="Expanded Result" Grid.Column="2">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Margin="6" Text="Expand(FactorTree):"/>
                        <ScrollViewer Margin="6" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="ExpandedText" TextWrapping="Wrap" FontFamily="Consolas"/>
                        </ScrollViewer>
                    </DockPanel>
                </GroupBox>
            </Grid>
        </Grid>
</Window>
