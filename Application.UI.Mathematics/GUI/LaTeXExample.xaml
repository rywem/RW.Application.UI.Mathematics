<Window x:Class="RW.Application.UI.Mathematics.GUI.LaTeXExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RW.Application.UI.Mathematics.GUI"
        mc:Ignorable="d"
        xmlns:wpfmath="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        
        Title="LaTeX in WPF (WpfMath)" Height="480" Width="820"
       >
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Input -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Text="LaTeX:" Margin="0,0,6,0"/>
            <TextBox x:Name="InputBox" Width="680"
               Text="\int_0^\infty e^{-x^2}\,dx=\frac{\sqrt{\pi}}{2}" />
            <Button Content="Render to Image" Click="RenderButton_Click" Margin="8,0,0,0"/>
        </StackPanel>

        <!-- Left: WpfMath control (note the namespace prefix 'wpfmath') -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="#CCC" BorderThickness="1" Padding="10" CornerRadius="6">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" FontWeight="Bold" Margin="0,0,0,8">FormulaControl</TextBlock>

                <!-- This is the control. 'FormulaView' is a valid x:Name. -->
                <wpfmath:FormulaControl x:Name="FormulaView"
                                FontSize="28"
                                Formula="{Binding Text, ElementName=InputBox}" />
            </DockPanel>
        </Border>

        <!-- Right: code-rendered image -->
        <Border Grid.Row="1" Grid.Column="1" BorderBrush="#CCC" BorderThickness="1" Padding="10" CornerRadius="6">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" FontWeight="Bold" Margin="0,0,0,8">Rendered Image</TextBlock>
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Image x:Name="RenderedImage"/>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>
